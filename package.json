{
  "name": "solevm-truffle",
  "version": "0.1.0",
  "description": "solevm with truffle tests",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "files": [
    "contracts",
    "test"
  ],
  "scripts": {
    "test": "scripts/test.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:sol": "solhint contracts/*.{sol,slb}",
    "lint:all": "npm run lint && npm run lint:sol",
    "lint:all:fix": "npm run lint:fix && npm run lint:sol",
    "console": "truffle console",
    "version": "scripts/version.js",
    "coverage": "scripts/coverage.sh"
  },
  "keywords": [
    "evm",
    "solidity",
    "truebit"
  ],
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "ethereumjs-util": "^6.0.0",
    "ethers": "^4.0.13",
    "ethjs-abi": "^0.2.1",
    "ganache-cli": "=6.2.5",
    "solhint": "^1.2.1",
    "truffle": "=5.0.0"
  },
  "author": "johannbarbie@me.com",
  "license": "ISC",
  "dependencies": {
    "ethereumjs-vm": "github:pinkiebell/ethereumjs-vm#distR1",
    "openzeppelin-solidity": "=2.1.1"
  }
}
